@model PTRex.ViewModels.WorkoutViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Which exercise would you like to do?</h2>


@using (Html.BeginForm("Create2", "ActualWorkouts", FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @*<h4>ActualWorkout</h4>*@
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
             
        <div class="form-group">
            @Html.LabelFor(model => model.ActualWorkout.TargetWorkoutID, "TargetWorkoutID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => Model.SelectedTargetWorkoutId, new SelectList(ViewBag.TargetWorkouts, "ID", "ExerciseNickName"), 
                    "-- Select Exercise --", 
                    htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SelectedTargetWorkoutId, "", new { @class = "text-danger" })
            </div>
        </div>    

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Continue" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
